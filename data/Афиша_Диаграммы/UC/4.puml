@startuml uc4
left to right direction

title Модерация мероприятий

actor "Модератор" as Moderator
actor "Редакция Афиша Daily" as Editor
actor "Организатор" as Organizer

rectangle "Процесс модерации" {
  usecase "Просмотр очереди модерации" as UC1
  usecase "Проверка информации о мероприятии" as UC2
  usecase "Одобрение мероприятия" as UC5
  usecase "Отклонение мероприятия" as UC6
  usecase "Добавление замечаний" as UC7
  usecase "Публикация мероприятия" as UC8
  usecase "Снятие с публикации" as UC9
  
  UC5 -.> UC2 : extend
  UC6 -.> UC7 : include
  UC8 -.> UC5 : include
  UC6 -.> UC2 : extend
}

rectangle "Редакционный контроль" {
  usecase "Добавление редакционных материалов" as UC12
  usecase "Создание тематических подборок" as UC14
  
  UC12 -.> UC5 : extend
  UC14 -.> UC5 : extend
}

Moderator --> UC1
Moderator --> UC8
Moderator --> UC6
Moderator --> UC9
Editor --> UC12
Editor --> UC14
Organizer --> UC7

@enduml
