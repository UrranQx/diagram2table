# Example environment variables for Diagram2Table
# Copy this file to .env and modify as needed

# ===========================================
# DEPLOYMENT MODE
# ===========================================
# Options:
#   - mock: Mock VLM for testing (no GPU needed)
#   - vlm_only: VLM without OCR
#   - vlm_quantized: Quantized VLM (INT4 AWQ) without OCR - lower memory
#   - full: VLM + OCR (full version, requires GPU + PaddleOCR)
DEPLOYMENT_MODE=mock

# ===========================================
# Model settings
# ===========================================
MODEL_NAME=Qwen/Qwen2.5-VL-7B-Instruct-AWQ
MODEL_NAME_QUANTIZED=Qwen/Qwen2.5-VL-7B-Instruct-AWQ
MODEL_NAME_FULL=Qwen/Qwen2.5-VL-7B-Instruct
MODEL_DEVICE=auto
# MODEL_DTYPE=auto

# Paths
# MODEL_PATH=./models
# DATA_PATH=./data
# LOG_PATH=./logs

# ===========================================
# OCR settings (only used with DEPLOYMENT_MODE=full)
# ===========================================
OCR_ENABLED=true
OCR_LANG=ru
OCR_USE_GPU=true

# ===========================================
# API settings
# ===========================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# ===========================================
# Gradio settings
# ===========================================
GRADIO_HOST=0.0.0.0
GRADIO_PORT=7860
GRADIO_SHARE=false

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=INFO

# ===========================================
# Limits
# ===========================================
MAX_FILE_SIZE_MB=10
MAX_IMAGE_SIZE=1280
MIN_IMAGE_SIZE=100
